{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "ordered-imports": [true, {
      "grouped-imports": true
    }],
    "member-access": true,
    "typedef": [true, "call-signature"],
    "no-debugger": true,
    "no-console": true,
    "no-angle-bracket-type-assertion": false,
    "max-line-length": [true, 140],
    "member-ordering": [true, {
      "alphabetize": false,
      "order": "statics-first"
    }],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-type-operator",
      "check-preblock"
    ],
    "space-before-function-paren": [true, {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always",
      "method": "never",
      "constructor": "never"
    }]
  }
}
